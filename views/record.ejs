<!DOCTYPE html>
<html lang="en">
	<head>
		<% include partials/head %>
		<!--  jQuery -->
		<script
			type="text/javascript"
			src="https://code.jquery.com/jquery-1.11.3.min.js"
		></script>

		<!-- Isolated Version of Bootstrap, not needed if your site already uses Bootstrap -->
		<link
			rel="stylesheet"
			href="https://formden.com/static/cdn/bootstrap-iso.css"
		/>

		<!-- Bootstrap Date-Picker Plugin -->
		<script
			type="text/javascript"
			src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.4.1/js/bootstrap-datepicker.min.js"
		></script>
		<link
			rel="stylesheet"
			href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.4.1/css/bootstrap-datepicker3.css"
		/>
	</head>

	<body>
		<% include partials/menu %>
		<section id="forms" class="container py-5 mx-auto">
			<div class="row">
				<div class="col-md-12">
					<form role="form">
						<div class="form-group row mx-auto">
							<label
								class="col-md-2 col-form-label form-control-label text-muted"
								>Item Name</label
							>

							<div class="col-md-4">
								<input class="form-control" type="text" value="" id="name" />
							</div>
						</div>
						<div class="form-group row mx-auto">
							<label
								class="col-md-2 col-form-label form-control-label text-muted"
								>Category</label
							>
							<div class="col-md-4 dropdown">
								<select
									class="browser-default custom-select form-control"
									style="height:35px"
									id="category"
								>
									<option disabled selected>Select Category</option>
									<option>Fashion</option>
									<option>Home & Garden</option>
									<option>Electronics</option>
									<option>Sports, Hobbies & Leisure</option>
									<option>Collectible & Art</option>
									<option>Health & Beauty</option>
									<option>Motors</option>
									<option>Other Categories</option>
								</select>
							</div>
						</div>
						<div class="form-group row mx-auto">
							<label
								class="col-md-2 col-form-label form-control-label text-muted"
								>Buying Format</label
							>
							<div class="col-md-4 radio-custom" id="buyingFormat">
								<label class="radio-inline"
									><input
										type="radio"
										name="formatRadio"
										checked
									/>Auction</label
								>
								<label class="radio-inline"
									><input type="radio" name="formatRadio" />Buy It Now</label
								>
							</div>
						</div>
						<div class="form-group row mx-auto">
							<label
								class="col-md-2 col-form-label form-control-label text-muted"
								>Date Ended</label
							>
							<input
								class="col-md-4 datepicker imput-sm form-control"
								type="date"
								name="dateEnded"
							/>
						</div>

						<div class="form-group row">
							<div class="col-lg-10">
								<input
									type="reset"
									class="btn btn-outline-secondary mr-2"
									value="Cancel"
								/>
								<input
									type="button"
									class="btn btn-primary mr-2"
									value="Submit"
								/>
							</div>
						</div>
					</form>
				</div>
			</div>
		</section>
	</body>
	<script>
		var today = new Date().toISOString().split("T")[0];
		document.getElementsByName("dateEnded")[0].setAttribute("max", today);
	</script>
	<% include partials/script %>
</html>
