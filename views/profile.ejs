<!DOCTYPE html>
<html lang="en">
	<head>
		<% include partials/head %>
	</head>

	<body>
		<% include partials/menu %>
		<div class="card mx-auto" style="width: 800px">
			<div
				class="card-body d-flex flex-column justify-content-center  align-items-center"
			>
				<div class="card border-primary h-50">
					<div class="card-body">
						<h2><%=user.username%>'s Profile</h2>
				<a href="/logout" class="btn btn-danger btn-sm">Logout</a>
			</div>
					
			</div>
				</br>
				</br>
				<h4 class='pull-left'>You currently have <%= results.length %> product records</h4>
				<div class="table-responsive mx-auto align-items-center" style="width:600px">
					<table class="table table-sm">
						<tbody>
							<tr>
								<th class="w-25">Product</th>
								<th class="w-25">Subitem</th>
							</tr>
							<!--Loop to print out everything in the array-->
							<% for(var i=0; i < results.length; i++) { %>
								<tr class="table-hover">
									<td>
										<a href="/product/<%=results[i].Name %>"><b><%= results[i].Name %></b></a>
									</td>
									<td>
										<a href="/product/<%=results[i].Name %>"><%= results[i].SubItem %></a>
									</td>
								</tr>
							<% } %>
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</body>
	<% include partials/script %>
</html>